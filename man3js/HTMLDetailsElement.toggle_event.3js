.SS JavaScript
.IP
.EX
function logItem(e) {
  const item = document.querySelector(\[ga][data\-id=${e.target.id}]\[ga]);
  item.toggleAttribute(\[dq]hidden\[dq]);
}

const chapters = document.querySelectorAll(\[dq]details\[dq]);
chapters.forEach((chapter) => {
  chapter.addEventListener(\[dq]toggle\[dq], logItem);
});
